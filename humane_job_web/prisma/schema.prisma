// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

// Company represents an organization using the platform
model Company {
  id        String   @id @default(cuid())
  name      String
  domain    String   @unique
  tier      Tier     @default(FREE)
  settings  Json?    @db.JsonB
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  jobs       Job[]
  apiKeys    ApiKey[]
  auditLogs  AuditLog[]
  subscriptions Subscription[]

  @@index([domain])
}

enum Tier {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

// User represents an individual user within a company
model User {
  id         String   @id @default(cuid())
  companyId  String
  clerkId    String   @unique
  email      String   @unique
  name       String?
  role       UserRole @default(RECRUITER)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  company        Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  interviewNotes InterviewNote[]
  decisions      Decision[]
  auditLogs      AuditLog[]

  @@index([companyId])
  @@index([clerkId])
  @@index([email])
}

enum UserRole {
  ADMIN
  HIRING_MANAGER
  RECRUITER
  INTERVIEWER
}

// Job represents a job posting
model Job {
  id           String   @id @default(cuid())
  companyId    String
  title        String
  description  String?  @db.Text
  rubric       Json?    @db.JsonB // Structured evaluation criteria
  jurisdiction String   @default("US") // US/EU/CA for jurisdiction-aware wording
  status       JobStatus @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  company        Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  candidates     Candidate[]
  interviewNotes InterviewNote[]
  decisions      Decision[]

  @@index([companyId])
  @@index([status])
}

enum JobStatus {
  DRAFT
  ACTIVE
  PAUSED
  CLOSED
}

// Candidate represents a job applicant
model Candidate {
  id              String   @id @default(cuid())
  jobId           String
  email           String
  name            String?
  consentFlags    Json?    @db.JsonB // Privacy consent tracking
  encryptedData   String?  @db.Text  // Client-side encrypted sensitive info (ciphertext only)
  encryptionKeyId String?  // Reference to which key was used for encryption
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  job       Job        @relation(fields: [jobId], references: [id], onDelete: Cascade)
  decisions Decision[]
  appeals   Appeal[]

  @@unique([jobId, email])
  @@index([jobId])
  @@index([email])
}

// InterviewNote represents structured feedback from an interview
model InterviewNote {
  id              String   @id @default(cuid())
  jobId           String
  candidateEmail  String   // Not FK to allow notes before candidate record
  authorId        String
  structuredScores Json    @db.JsonB // Rubric-based scores, not raw notes
  summary         String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  job    Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([candidateEmail])
  @@index([authorId])
}

// Decision represents the final hiring decision and generated letter
model Decision {
  id               String         @id @default(cuid())
  jobId            String
  candidateId      String
  authorId         String
  outcome          DecisionOutcome
  reasons          Json           @db.JsonB // Structured reasons array
  generatedLetter  String?        @db.Text
  sentAt           DateTime?
  letterTemplate   String?        // Reference to template used
  templateVersion  String?        // Template version for audit trail
  biasCheckPassed  Boolean        @default(false)
  idempotencyKey   String?        // For idempotent operations
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  receipt   ExplainableReceipt?
  appeals   Appeal[]

  @@unique([candidateId, idempotencyKey])
  @@index([jobId])
  @@index([candidateId])
  @@index([outcome])
  @@index([sentAt])
  @@index([idempotencyKey])
}

enum DecisionOutcome {
  REJECTED
  WAITLIST
  ADVANCED
  OFFER
}

// ApiKey for extension and external integrations
model ApiKey {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  keyHash     String   @unique // Never store plaintext keys
  scopes      String[] // Allowed permissions
  expiresAt   DateTime?
  lastUsedAt  DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([keyHash])
}

// AuditLog for compliance and security tracking
model AuditLog {
  id         String   @id @default(cuid())
  companyId  String
  userId     String?
  action     String   // e.g., "decision.created", "letter.sent", "data.exported"
  entityType String   // e.g., "Decision", "Candidate"
  entityId   String
  metadata   Json?    @db.JsonB
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([companyId])
  @@index([userId])
  @@index([action])
  @@index([entityType, entityId])
  @@index([createdAt])
}

// Subscription for billing and entitlements
model Subscription {
  id              String             @id @default(cuid())
  companyId       String
  stripeCustomerId String?           @unique
  stripeSubscriptionId String?      @unique
  status          SubscriptionStatus @default(TRIAL)
  tier            Tier               @default(FREE)
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  cancelAtPeriodEnd  Boolean        @default(false)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([stripeCustomerId])
  @@index([status])
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
}

// LetterTemplate for customizable rejection letter templates
model LetterTemplate {
  id           String   @id @default(cuid())
  companyId    String?  // Null for system templates
  name         String
  jurisdiction String   @default("US")
  template     String   @db.Text
  variables    Json?    @db.JsonB // Available template variables
  isDefault    Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([companyId])
  @@index([jurisdiction])
}

// DataExport for DSR (Data Subject Request) tracking
model DataExport {
  id          String           @id @default(cuid())
  companyId   String
  requestType DataRequestType
  email       String           // Email of data subject
  status      ExportStatus     @default(PENDING)
  fileUrl     String?          // Signed URL to export file
  expiresAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime         @default(now())

  @@index([companyId])
  @@index([email])
  @@index([status])
}

enum DataRequestType {
  EXPORT
  DELETE
}

enum ExportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ExplainableReceipt stores cryptographic hash of decision for audit trail
model ExplainableReceipt {
  id          String   @id @default(cuid())
  decisionId  String   @unique
  hash        String   // SHA-256 of {letter, reasons, templateVersion, rubricDeltas}
  explainable Json     @db.JsonB // Explainable Feedback Card data
  version     String   @default("1.0")
  createdAt   DateTime @default(now())

  decision Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)

  @@index([decisionId])
  @@index([hash])
}

// Appeal represents a candidate clarification request
model Appeal {
  id          String       @id @default(cuid())
  decisionId  String
  candidateId String
  question    String       @db.Text
  status      AppealStatus @default(PENDING)
  response    String?      @db.Text
  respondedBy String?
  dueAt       DateTime?    // SLA deadline
  thread      Json?        @db.JsonB // Conversation history
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  decision  Decision  @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([decisionId])
  @@index([candidateId])
  @@index([status])
  @@index([dueAt])
}

enum AppealStatus {
  PENDING
  RESPONDED
  CLOSED
  EXPIRED
}

// FeatureFlag for per-tenant feature toggles
model FeatureFlag {
  id        String   @id @default(cuid())
  companyId String
  key       String   // e.g., "explainable_cards", "appeals_enabled"
  value     Json     @db.JsonB // Boolean, string, object, etc.
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([companyId, key])
  @@index([companyId])
  @@index([key])
}

// JurisdictionPack encapsulates locale-specific rules and configuration
model JurisdictionPack {
  id          String   @id @default(cuid())
  code        String   @unique // US, EU, CA, UK, etc.
  version     String   // Semver for tracking changes
  name        String
  config      Json     @db.JsonB // Holidays, send-time rules, legal disclaimers, wording
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([code])
  @@index([version])
}

// BulkOperation tracks bulk letter generation/send operations
model BulkOperation {
  id             String              @id @default(cuid())
  companyId      String
  authorId       String
  type           BulkOperationType
  idempotencyKey String?             @unique
  candidateCount Int
  successCount   Int                 @default(0)
  errorCount     Int                 @default(0)
  status         BulkOperationStatus @default(PENDING)
  errors         Json?               @db.JsonB // First 10 errors
  metadata       Json?               @db.JsonB // Job ID, template, etc.
  completedAt    DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  @@index([companyId])
  @@index([authorId])
  @@index([idempotencyKey])
  @@index([status])
  @@index([createdAt])
}

enum BulkOperationType {
  LETTER_GENERATE
  LETTER_SEND
  CANDIDATE_IMPORT
  DATA_EXPORT
}

enum BulkOperationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  PARTIAL
}
